@model FinancialAssets.WebApp.Models.WalletAsset

<form asp-action="WalletAssetChange">
    <div class="container border p-3">
        <h1 class=text-black>Edit Post</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Coin" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Coin" class="form-control" readonly="true" />
                <span asp-validation-for="Coin" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Wallet" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Wallet" class="form-control" readonly="true"/>
                <span asp-validation-for="Wallet" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Count" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="WalletAssetIndex" class="btn-dark btn form-control">Back to list</a>
            </div>

            <div class="col 5">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>