@model AssetViewModel

@{
    ViewData["Title"] = "Assets";
}

<p>
    <form asp-controller="Assets" asp-action="AssetsIndex">
        Актив:        <input type="text" name="searchAsset" value="@Model.SearchCoin" />

        <input type="submit" value="Фильтр" />
    </form>
</p>

<p>
    <div class="col text-md-center pt-1">
        <a asp-action="AddAsset" class="btn btn-outline-dark">Добавить</a>
        <a asp-controller="Assets" asp-action="Upload" class="btn btn-outline-dark">Загрузить</a>
    </div>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assets.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assets.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assets.First().Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assets.First().Operation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assets.First().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assets.First().Marketplace)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model.Assets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => asset.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => asset.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => asset.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => asset.Operation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => asset.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => asset.Marketplace)
                </td>
                <td>
                    <a asp-action="AssetDelete" asp-route-id="@asset.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

