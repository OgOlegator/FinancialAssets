@model FinancialAssets.WebApp.Models.WalletAssetAddViewModel

<form asp-action="AddWalletAsset">
    <br />
    <div class="container border p-3">
        <h1 class=text-black>Add</h1>

        @if (Model.ShowMessage)
        {
            <p>
                <strong>Message:</strong> <code>@Model.Message</code>
            </p>
        }

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="WalletAsset.Coin" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="WalletAsset.Coin" class="form-control" />
                <span asp-validation-for="WalletAsset.Coin" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="WalletAsset.Wallet" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="WalletAsset.Wallet" class="form-control" />
                <span asp-validation-for="WalletAsset.Wallet" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="WalletAsset.Count" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="WalletAsset.Count" class="form-control" />
                <span asp-validation-for="WalletAsset.Count" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="WalletAssetIndex" class="btn-dark btn form-control">Back to list</a>
            </div>

            <div class="col 5">
                <input type="submit" value="Add" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>